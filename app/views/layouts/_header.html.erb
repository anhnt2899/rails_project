        <li><%= link_to "Login", new_path %></li>
        <% end %>
        <% if current_user == 1 %>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= @user.username %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Logout", logout_path %></li>
              <li><%= link_to 'Edit', edit_user_path(@user) %></li>
            </ul>
          </li>
        <% end %>
