<h1>Login</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= t ".user" %>
      <%= f.text_field :username, class: "form-control" %>
      <%= t ".password" %>
      <%= f.password_field :password, class: "form-control" %>  
      <%= f.submit "submit", class: "btn btn-primary" %>
    <% end %>
    <h5>New user ? <%= link_to "Register now ", register_path ,style: 'text-decoration:none' %></h5>
    <h5>Forget password ? <%= link_to "Recover now ", recover_path ,style: 'text-decoration:none' %></h5>
  </div>
</div>

